{
  "name": "@mcp/core",
  "version": "0.1.0",
  "description": "Platform-agnostic Model Context Protocol integration for LAMA",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "lama-mcp-server": "./bin/lama-mcp-server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./local": {
      "import": "./dist/local/index.js",
      "types": "./dist/local/index.d.ts"
    },
    "./local/*": {
      "import": "./dist/local/*.js",
      "types": "./dist/local/*.d.ts"
    },
    "./remote": {
      "import": "./dist/remote/index.js",
      "types": "./dist/remote/index.d.ts"
    },
    "./remote/*": {
      "import": "./dist/remote/*.js",
      "types": "./dist/remote/*.d.ts"
    },
    "./tools/*": {
      "import": "./dist/tools/*.js",
      "types": "./dist/tools/*.d.ts"
    },
    "./interface/*": {
      "import": "./dist/interface/*.js",
      "types": "./dist/interface/*.d.ts"
    },
    "./recipes/*": {
      "import": "./dist/recipes/*.js",
      "types": "./dist/recipes/*.d.ts"
    },
    "./router": {
      "import": "./dist/router/index.js",
      "types": "./dist/router/index.d.ts"
    },
    "./policy": {
      "import": "./dist/policy/index.js",
      "types": "./dist/policy/index.d.ts"
    },
    "./audit": {
      "import": "./dist/audit/index.js",
      "types": "./dist/audit/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2"
  },
  "peerDependencies": {
    "@refinio/one.core": "*"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "lama",
    "one.core"
  ],
  "author": "",
  "license": "MIT"
}
